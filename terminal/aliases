function diary() {
  if [ -z $1 ]
  then
    echo "Diary not found"
    exit 1
  fi
  if [ -z $2 ]
  then
    nvim ~/diary/$1-$(date +%Y-%m-%d).md
  else
    case "$2" in
    ls)
      ls ~/diary/$1-*.md
    ;;
    day)
      nvim ~/diary/$1-$3.md
    ;;
    *)
      echo "Invalid option"
    ;;
    esac
  fi
}

